<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="Juke.png">
    <link rel="stylesheet" href="style.css">
    <title>Juke.</title>
</head>

<body>
    <header>
        <%- include('../partials/nav', { user: user }) %>

    </header>


    <main>
        <h1>Zoek</h1>
        <!-- Zoekformulier -->
        <form action="/search" method="get" class="searchContainer">
            <input type="text" name="q" class="searchBar" placeholder="Zoeken...">
            <button type="submit" class="searchButton"><img src="images/zoeken.svg" alt="Zoekknop"></button>
        </form>
        <section class="searchList">
            <h2>Jouw topartiesten</h2>
            <p>Swipe en ontdek op basis van een specifieke artiest</p>
            <ul>
                <% artists.forEach(artist => { %>
                <li>
                    <div>
                        <img src="<%= artist.images[0].url %>" alt="<%= artist.name %>">
                        <p class="textOverflow"><%= artist.name %></p>
                    </div>
                    <a href="/search-recommendations?seedUri=<%= artist.id %>&seed_type=seed_artists"
                        class="swipeButton">Swipe</a>
                </li>
                <% }) %>
            </ul>
        </section>
        <section class="searchList">
            <h2>Jouw topnummers</h2>
            <p>Swipe en ontdek op basis van een specifiek nummer</p>
            <ul>
                <% topTracks.forEach(track => { %>
                <li>
                    <div>
                        <img src="<%= track.album.images[0].url %>" alt="<%= track.name %>">
                        <p class="textOverflow"><%= track.name %> -
                            <%= track.artists.map(artist => artist.name).join(', ') %></p>
                    </div>
                    <a href="/search-recommendations?seedUri=<%= track.id %>&seed_type=seed_tracks"
                        class="swipeButton">Swipe</a>
                </li>
                <% }) %>
            </ul>
        </section>

    </main>

    <script defer src="scripts/app.js"></script>
</body>

</html>