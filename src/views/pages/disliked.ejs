<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/Juke.png">
    <link rel="stylesheet" href="style.css">
    <title>Juke.</title>
</head>
<body>
    <header>
        <%- include('../partials/nav', { user: user }) %>
    </header>

    <main>
        <div class="backHeader">
            <a href="/profiel" class="backArrow"><img src="/images/Arrow.svg"></a>
            <h1>Disliked</h1>
        </div>

        <section id="theList">
            <input type="search" class="search" placeholder="Zoeken...">
            <ul class="list" id="disliked-list">
                <% songs.forEach(function(song) { %>
                    <li class="likedCard">
                        <img src="<%= song.images[0]?.url %>" alt="<%= song.artists[0].name %>">
                        <h4 class="listNummer"><%= song.name %></h4>
                        <p class="listArtiest"><%= song.artists.join(", ") %></p>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="heart" class="unlike" data-track-id="<%= song._id %>" data-track-name="<%= song.name %>" data-track-artists="<%= song.artists.join(', ') %>" data-track-images="<%= song.images.map(img => img.url).join(',') %>">
                            <path d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                        </svg>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
    <script defer src="scripts/likedList.js"></script>
    <script defer src="scripts/app.js"></script>
</body>
</html>
